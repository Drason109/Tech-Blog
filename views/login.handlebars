<div class="card flex-column">
    <h2 class="card-header">Enter username and password</h2>
    <form id="login" class="card-body">
        <div class="mb-6">
            <label for="username-login" class="form-label">username</label>
            <input type="username" class="form-control" id="username-login" placeholder="Enter username-login">
        </div>

        <div class="mb-6">
            <label for="password-login" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Enter Password">
            <div id="Help" class="form-text">Must be 8 digits long.</div>
        </div>
        <div class="mb-6">
            <a href="/signup">Haven't made an account? signup here</a>
        </div>

        <button type="submit" class="btn btn-primary" id="login-btn">Log In</button>
    </form>
</div>

<script src="js/login.js"></script>