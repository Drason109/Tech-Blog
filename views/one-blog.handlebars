<p class="card col-md-6 col-lg-4 mb-5">To leave a Comment, Please log in</p>
<div class="card-md-6 col-lg-4 mb-5">
    <div class="card-header">
        <h5 class="card-title float-left">{{blog.title}}</h5>
        <h6 class="card-date mb-2 float-right">Posted by{{blog.username}} on {{formatDate blog.date}}</h6>
    </div>

    <div class="card-body  comment">
        {{>commentcard blog.comment}}
    </div>
</div>

<input type="hidden" name="post-id" value="{{post.id}}">

{{#if loggedIn}}

<div class="card">
    <div class="card-header"></div>
        <form class="card-body comment-form">
            <p class="form-label">Leave Comment:</p>
            <textarea name="comment-body" id="comment">Submit</textarea>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
</div>
{{/if}}

<script src="/js/comment.js"></script>